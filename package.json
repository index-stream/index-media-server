{
  "name": "index-media-server",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:css:localweb": "tailwindcss -c tailwind.localweb.config.js -i ./localweb/styles/input.css -o ./localweb/styles/main.css --minify",
    "build:css:web": "tailwindcss -c tailwind.web.config.js -i ./web/styles/input.css -o ./web/styles/main.css --minify",
    "build:css": "npm run build:css:localweb && npm run build:css:web",
    "watch:css": "tailwindcss -c tailwind.localweb.config.js -i ./localweb/styles/input.css -o ./localweb/styles/main.css --watch",
    "tauri": "tauri",
    "dev": "npm run watch:css & tauri dev",
    "build": "npm run build:css && tauri build",
    "test": "cd src-tauri && cargo test handlers::tests",
    "test:all": "cd src-tauri && cargo test"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "tailwindcss": "^3.4.0"
  }
}
